{{ 'component-newsletter.css' | asset_url | stylesheet_tag }}

<footer class="footer">
  <div class="container">
    <div class="footer__content">
      <!-- Company Info -->
      <div class="footer__section">
        <h3 class="footer__logo">elocin</h3>
        <p class="footer__description">
          Minimalist fashion for the modern lifestyle. Quality pieces that speak to your style.
        </p>
        <div class="footer__social">
          {% if settings.social_instagram_link != blank %}
            <a href="{{ settings.social_instagram_link }}" class="footer__social-link" aria-label="Instagram">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
                <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37Z"></path>
                <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
              </svg>
            </a>
          {% endif %}
          {% if settings.social_facebook_link != blank %}
            <a href="{{ settings.social_facebook_link }}" class="footer__social-link" aria-label="Facebook">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3Z"></path>
              </svg>
            </a>
          {% endif %}
          {% if settings.social_twitter_link != blank %}
            <a href="{{ settings.social_twitter_link }}" class="footer__social-link" aria-label="Twitter">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3Z"></path>
              </svg>
            </a>
          {% endif %}
        </div>
      </div>

      <!-- Quick Links -->
      <div class="footer__section">
        <h4 class="footer__title">Quick Links</h4>
        <ul class="footer__links">
          {% for link in linklists.footer.links %}
            <li>
              <a href="{{ link.url }}" class="footer__link">{{ link.title }}</a>
            </li>
          {% endfor %}
        </ul>
      </div>

      <!-- Customer Service -->
      <div class="footer__section">
        <h4 class="footer__title">Customer Service</h4>
        <ul class="footer__links">
          <li><a href="/pages/contact" class="footer__link">Contact Us</a></li>
          <li><a href="/pages/shipping-returns" class="footer__link">Shipping & Returns</a></li>
          <li><a href="/pages/size-guide" class="footer__link">Size Guide</a></li>
          <li><a href="/pages/faq" class="footer__link">FAQ</a></li>
        </ul>
      </div>

      <!-- Legal -->
      <div class="footer__section">
        <h4 class="footer__title">Legal</h4>
        <ul class="footer__links">
          <li><a href="/pages/privacy-policy" class="footer__link">Privacy Policy</a></li>
          <li><a href="/pages/terms-of-service" class="footer__link">Terms of Service</a></li>
          <li><a href="/pages/cookie-policy" class="footer__link">Cookie Policy</a></li>
        </ul>
      </div>

      <!-- Newsletter -->
      <div class="footer__section footer__newsletter">
        <h4 class="footer__title">Stay Updated</h4>
        <p class="footer__newsletter-text">Subscribe to get special offers and updates.</p>
        {% form 'customer' %}
          <div class="newsletter-form">
            <input 
              type="email" 
              name="contact[email]" 
              placeholder="Your email address"
              class="newsletter-input"
              required
            >
            <button type="submit" class="newsletter-submit">
              Subscribe
            </button>
          </div>
        {% endform %}
      </div>
    </div>

    <div class="footer__bottom">
      <div class="footer__bottom-content">
        <p class="footer__copyright">
          &copy; {{ 'now' | date: '%Y' }} elocin. All rights reserved.
        </p>
        <div class="footer__payment">
          <span class="footer__payment-text">We accept:</span>
          <div class="footer__payment-icons">
            <svg width="40" height="25" viewBox="0 0 40 25" fill="none">
              <rect width="40" height="25" rx="4" fill="#1A1F71"/>
              <text x="20" y="16" font-family="Arial, sans-serif" font-size="8" fill="white" text-anchor="middle">VISA</text>
            </svg>
            <svg width="40" height="25" viewBox="0 0 40 25" fill="none">
              <rect width="40" height="25" rx="4" fill="#EB001B"/>
              <circle cx="15" cy="12.5" r="7" fill="#EB001B"/>
              <circle cx="25" cy="12.5" r="7" fill="#FF5F00"/>
            </svg>
            <svg width="40" height="25" viewBox="0 0 40 25" fill="none">
              <rect width="40" height="25" rx="4" fill="#006FCF"/>
              <text x="20" y="16" font-family="Arial, sans-serif" font-size="6" fill="white" text-anchor="middle">PAYPAL</text>
            </svg>
          </div>
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background-color: rgb(var(--color-base-background));
    border-top: 1px solid rgb(var(--color-base-outline));
    margin-top: auto;
  }

  .footer__content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 4rem;
    padding: 6rem 0 4rem;
  }

  .footer__logo {
    font-size: 2.4rem;
    font-weight: 700;
    color: rgb(var(--color-base-text));
    margin-bottom: 1.5rem;
  }

  .footer__description {
    color: rgb(var(--color-base-text));
    opacity: 0.8;
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  .footer__social {
    display: flex;
    gap: 1.5rem;
  }

  .footer__social-link {
    color: rgb(var(--color-base-text));
    transition: opacity 0.3s ease;
  }

  .footer__social-link:hover {
    opacity: 0.7;
  }

  .footer__title {
    font-size: 1.8rem;
    font-weight: 600;
    color: rgb(var(--color-base-text));
    margin-bottom: 2rem;
  }

  .footer__links {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .footer__links li {
    margin-bottom: 1rem;
  }

  .footer__link {
    color: rgb(var(--color-base-text));
    text-decoration: none;
    opacity: 0.8;
    transition: opacity 0.3s ease;
  }

  .footer__link:hover {
    opacity: 1;
  }

  .footer__newsletter-text {
    color: rgb(var(--color-base-text));
    opacity: 0.8;
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  .newsletter-form {
    display: flex;
    gap: 1rem;
  }

  .newsletter-input {
    flex: 1;
    padding: 1.2rem;
    border: 1px solid rgb(var(--color-base-outline));
    background-color: rgb(var(--color-base-background));
    color: rgb(var(--color-base-text));
    font-size: 1.4rem;
  }

  .newsletter-input:focus {
    outline: none;
    border-color: rgb(var(--color-base-accent));
  }

  .newsletter-submit {
    padding: 1.2rem 2rem;
    background-color: rgb(var(--color-base-accent));
    color: rgb(var(--color-base-background));
    border: none;
    cursor: pointer;
    font-weight: 600;
    transition: opacity 0.3s ease;
  }

  .newsletter-submit:hover {
    opacity: 0.9;
  }

  .footer__bottom {
    border-top: 1px solid rgb(var(--color-base-outline));
    padding: 3rem 0;
  }

  .footer__bottom-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 2rem;
  }

  .footer__copyright {
    color: rgb(var(--color-base-text));
    opacity: 0.8;
    margin: 0;
  }

  .footer__payment {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .footer__payment-text {
    color: rgb(var(--color-base-text));
    opacity: 0.8;
    font-size: 1.4rem;
  }

  .footer__payment-icons {
    display: flex;
    gap: 0.5rem;
  }

  @media (max-width: 768px) {
    .footer__content {
      grid-template-columns: 1fr;
      gap: 3rem;
      padding: 4rem 0 3rem;
    }

    .footer__bottom-content {
      flex-direction: column;
      text-align: center;
      gap: 2rem;
    }

    .newsletter-form {
      flex-direction: column;
    }

    .footer__payment {
      flex-direction: column;
      gap: 1rem;
    }
  }
</style>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "text",
      "id": "footer_description",
      "label": "Footer Description",
      "default": "Minimalist fashion for the modern lifestyle. Quality pieces that speak to your style."
    },
    {
      "type": "url",
      "id": "social_instagram_link",
      "label": "Instagram URL"
    },
    {
      "type": "url",
      "id": "social_facebook_link",
      "label": "Facebook URL"
    },
    {
      "type": "url",
      "id": "social_twitter_link",
      "label": "Twitter URL"
    }
  ]
}
{% endschema %}